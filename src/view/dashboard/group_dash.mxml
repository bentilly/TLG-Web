<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:dataViz="view.dataViz.*"
		 
		 
		 height="400"
		 width="200"
		 
		 click="clickHandler(event)"
		 >
	
	<fx:Script>
		<![CDATA[
			import business.dataObjects.TlgGroup;
			
			import events.UIEvent;
			
			[Bindable] public var tlgGroup:TlgGroup;
			
			protected function clickHandler(event:MouseEvent):void
			{
				var uie:UIEvent = new UIEvent(UIEvent.GO_GROUP);
				uie.tlgGroup = tlgGroup;
				dispatchEvent(uie);
			}
			
		]]>
	</fx:Script>
	
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
	
		<s:VGroup>
			<s:Image source="@Embed(source='../../assets/angrymonkey.png')"/>
			<s:Label text="{tlgGroup._name}" styleName="h2_white" width="200" height="50"/>
			<!--<dataViz:smallLeaderboard/>-->
		</s:VGroup>

	
	
	
	
	
	
</s:Group>
