<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
 
		 >
	
	<fx:Script>
		<![CDATA[
			
			[Bindable] public var colHeight:Number = 60;
			[Bindable] public var labelText:String = "t";
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
	<s:VGroup horizontalAlign="center" verticalAlign="bottom">
		
		<s:Graphic>
			<s:Rect height="{colHeight}" width="8">
				<s:fill>
					<s:SolidColor color="0xffffff"/>
				</s:fill>
			</s:Rect>
		</s:Graphic>
		
		<s:Label text="{labelText}" styleName="tinyWhite"/>
		
	</s:VGroup>
	
</s:Group>
